  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "multer": "^1.4.4",
    "node-unifi": "^2.1.0",
    "tailwindcss": "^3.0.23",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
